<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
    >


<com.example.project1.viewCustom.PercentageTextView
    android:id="@+id/pv_fragment_expenses_by_category_chart"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="70dp"/>

<TextView
    android:id="@+id/tv_fragment_expenses_by_category_sum"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="@string/inTotal"
    android:layout_gravity="center_horizontal"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_expenses_by_category_fragment"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_gravity="center_horizontal">

</androidx.recyclerview.widget.RecyclerView>

</LinearLayout>